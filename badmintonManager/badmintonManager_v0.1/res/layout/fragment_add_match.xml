<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/window_bg">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rect_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="时间" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:enabled="false"
            android:textSize="16sp"
            android:hint="点击输入时间"
            android:inputType="text" 
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="场地" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:textSize="16sp"
            android:hint="输入场地号"
            android:inputType="text"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="管理员" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:textSize="16sp"
            android:hint="输入场地号"
            android:inputType="text"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="参与" />

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/et_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:hint="输入参与人姓名,用,隔开"
            android:textSize="16sp"
            android:inputType="text"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep" />

    </RelativeLayout>
    
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/fb_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        flatui:fl_theme="@array/orange"
        flatui:fl_blockButtonEffectHeight="3dp"
        flatui:fl_textAppearance="fl_light"
        android:text="保存" />

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/fb_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/fb_save"
        flatui:fl_theme="@array/sky"
        flatui:fl_blockButtonEffectHeight="3dp"
        flatui:fl_textAppearance="fl_light"
        android:text="完成" />

    </RelativeLayout>

</LinearLayout>